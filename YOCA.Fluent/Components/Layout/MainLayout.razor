@inherits LayoutComponentBase
@inject IToastService ToastService

<FluentLayout>
    <FluentHeader>
        <img src="img/icon64.png" alt="Year of Code Icon" height="40" />&nbsp;&nbsp;&nbsp;<FluentLabel Typo="Typography.HeroTitle">WebLuke's Year Of Code 2025</FluentLabel>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <a href="https://ko-fi.com/webluke" target="_blank">Buy a Coffee for WebLuke</a>
        <FluentSpacer />
        <a href="https://www.webluke.net" target="_blank">WebLuke.net</a>
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
