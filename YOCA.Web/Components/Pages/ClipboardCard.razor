@inject Statuses state

@if (cb != null)
{
    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h5">
                    @cb.Title
                    <StatusChip s="@cb.Status" />
                </MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            @if(cb.Status == 100)
            {
                <p><b>Completed:</b> @cb.DateCompleted.ToString("MMMM d, yyyy")</p>
                <br />
            }
            @((MarkupString)Markdown.ParseHtmlString(cb.Note).ToString())
        </MudCardContent>
    </MudCard>
}

@code {
    [Parameter]
    public ClipboardModel cb { get; set; }

    protected override void OnInitialized()
    {

    }

}