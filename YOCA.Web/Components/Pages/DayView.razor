
@if (day != null)
{
    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h5">Day @day.Day - @day.Date.ToString("MMMM d, yyyy")</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <p><b>Goal:</b> @day.Goal</p>
            <p><b>Result:</b> @day.Result</p>
            <br />
            @((MarkupString)Markdown.ParseHtmlString(day.Summary).ToString())
            <br />
            <p><b>Tomorrow:</b> @day.Tomorrow</p>
        </MudCardContent>
    </MudCard>
}

@code {
    [Parameter]
    public DayOfCodeModel day { get; set; }

    protected override void OnInitialized()
    {

    }

}
