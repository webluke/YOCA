@inject Statuses state

@if (p != null)
{
    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h5">@p.Title
                    <StatusChip s="@p.Status" />
                </MudText>
                <MudText Typo="Typo.h6">Start: @p.StartDate - End: @p.EndDate</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudCard Outlined="true">
                <MudCardContent>
                    @((MarkupString)Markdown.ParseHtmlString(p.Description).ToString())
                </MudCardContent>
            </MudCard>
            @if (p.Tasks.Count > 0)
            {
            <MudTimeline>
                @foreach (var task in p.Tasks)
                {
                <MudTimelineItem Color="@state.DefaultStatuses[task.Status].Color" TimelineAlign="TimelineAlign.End" Size="Size.Large">
                    <ItemDot>
                        <MudIcon Icon="@state.DefaultStatuses[task.Status].Icon" Size="Size.Medium" />
                    </ItemDot>
                    <ItemOpposite>
                        <MudText Color="@state.DefaultStatuses[task.Status].Color" Typo="Typo.h6" GutterBottom="true">@task.Title</MudText>
                    </ItemOpposite>
                    <ItemContent>
                        @((MarkupString)Markdown.ParseHtmlString(task.Description).ToString())
                    </ItemContent>
                </MudTimelineItem>
                }
            </MudTimeline>
            }
        </MudCardContent>
    </MudCard>
}

@code {
    [Parameter]
    public ProjectModel p { get; set; }

    protected override void OnInitialized()
    {

    }

}
